{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Reasoning Schema",
    "type": "object",
    "properties": {
        "reasoning": {
            "type": "object",
            "properties": {
                "rationales": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "steps": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "steps"
                        ]
                    }
                }
            },
            "required": [
                "rationales"
            ]
        }
    },
    "required": [
        "reasoning"
    ]
}