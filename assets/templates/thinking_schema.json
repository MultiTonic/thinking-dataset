{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Thinking Schema",
    "type": "object",
    "properties": {
        "thinking": {
            "type": "object",
            "properties": {
                "initial_thought": {
                    "type": "string"
                },
                "thoughts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "initial_thought",
                "thoughts"
            ]
        }
    },
    "required": [
        "thinking"
    ]
}